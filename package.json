{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "version": "5.0.3",
  "name": "@terrandominion/angular",
  "license": "MIT",
  "ngPackage": {
    "dest": "./dist",
    "lib": {
      "entryFile": "index.ts"
    }
  },
  "scripts": {

    "ng": "ng",
    "typedoc": "typedoc",

    "clean:dist": "rm -rf \"dist\"",
    "clean:doc": "rm -rf \"docs\"",
    "clean:coverage": "rm -rf \"coverage\"",

    "start": "yarn run serve:proxy",
    "serve": "ng serve --open",
    "serve:proxy": "ng serve --proxy-config \"proxy.conf.json\" --host 0.0.0.0 --open",

    "predoc": "yarn run clean:doc",
    "doc": "typedoc --options \"tsconfig.json\" --exclude \"**/*.(spec|d).ts\" \"src\"",

    "prelint": "",
    "lint": "ng lint",

    "test": "yarn run test:single",
    "test:single": "ng test --single-run",
    "pretest:coverage": "yarn run clean:coverage",
    "test:coverage": "ng test --code-coverage",
    "pretest:coverage:single": "yarn run clean:coverage",
    "test:coverage:single": "ng test --code-coverage --single-run",
    "coverage": "ng help",

    "pree2e": "yarn run clean:coverage",
    "e2e": "ng e2e",

    "prebuild": "yarn run clean:dist",
    "build": "ng build --target \"production\"",

    "version": "yarn run build",
    "preversion": "yarn run doc && yarn run lint && yarn run test:single",
    "package": "ng-packagr -p \"package.json\"",
    "publish": "npm publish \"./dist\""

  },
  "dependencies": {
    "@angular/animations": "5.1.2",
    "@angular/cdk": "5.0.2",
    "@angular/common": "5.1.2",
    "@angular/compiler": "5.1.2",
    "@angular/core": "5.1.2",
    "@angular/flex-layout": "2.0.0-beta.12",
    "@angular/forms": "5.1.2",
    "@angular/http": "5.1.2",
    "@angular/material": "5.0.2",
    "@angular/material-moment-adapter": "5.0.2",
    "@angular/platform-browser": "5.1.2",
    "@angular/platform-browser-dynamic": "5.1.2",
    "@angular/router": "5.1.2",
    "@kuwas/angular": "5.25.3",
    "@ngrx/effects": "4.1.1",
    "@ngrx/router-store": "4.1.1",
    "@ngrx/store": "4.1.1",
    "@ngrx/store-devtools": "4.1.1",
    "angular2-text-mask": "8.0.4",
    "clone": "2.1.1",
    "core-js": "2.5.1",
    "hammerjs": "2.0.8",
    "lodash-es": "4.17.4",
    "moment": "2.20.1",
    "rxjs": "5.5.2",
    "thenby": "1.2.3",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "1.6.3",
    "@angular/compiler-cli": "5.1.2",
    "@angular/language-service": "5.1.2",
    "@types/lodash-es": "4.17.0",
    "@types/jasmine": "2.6.3",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.0.19",
    "codelyzer": "4.0.0",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-mocha-reporter": "2.2.5",
    "ng-packagr": "2.0.0-rc.9",
    "protractor": "5.2.0",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "typedoc": "0.9.0",
    "typescript": "2.5.3"
  }
}
