:host
  margin-bottom 30px

:host /deep/

  /* field */

  .mat-form-field
  .mat-radio-group
  .mat-checkbox
    margin-bottom 10px
    display block
    width 100%

  .mat-form-field

    .mat-form-field-wrapper
      padding-bottom 0
      width calc( 100% - 20px )

    .mat-form-field-flex
      align-items center

    .mat-form-field-infix
      padding 0
      border 0

    .mat-form-field-underline
      bottom auto

  .mat-radio-group
    .mat-radio-button
      margin-bottom 10px
      margin-right 10px

  /* label */

  .mat-form-label
  .mat-radio-label
  .mat-checkbox-label
    white-space normal

  .mat-aria-label
    font-size 0

  /* input */

  .mat-input-element
  .mat-input-placeholder
    padding-top 10px
    padding-bottom 10px
    box-sizing border-box
    margin 0

  .mat-input-placeholder
    position relative
    left auto
    top auto

  /* select */

  .mat-select-element
    font-size inherit
    background transparent
    appearance none
    -webkit-appearance none
    -moz-appearance none
    -ms-appearance none
    -o-appearance none
    z-index 1
    position relative
    border-radius 0
    padding-bottom 10px
    padding-top 10px
    width 100%

  /* icons */

  .mat-has-prefix
    .mat-input-element
    .mat-input-placeholder
    .mat-select-element
      padding-left 20px

  .mat-has-suffix
    .mat-input-element
    .mat-input-placeholder
    .mat-select-element
      padding-right 20px

  .mat-form-field-prefix
  .mat-form-field-suffix
    text-align center
    position absolute
    padding-bottom 10px
    padding-top 10px
    width 20px
    top 0

  .mat-form-field-prefix
    left 0

  .mat-form-field-suffix
    right 0

  .mat-icon-button
    height 20px
    width 20px

  /* error */

  .mat-form-field-invalid

    .mat-form-field-infix
      border-color #a00

    .mat-icon svg
    i
      color #a00
      fill #a00

/* label */

.mat-form-label
  &
    margin-bottom 10px
    display inline-block
  i
    margin-left 5px

/* error */

.mat-error
  div
    margin-bottom 5px
  div:last-child
  &.small
    margin 0
