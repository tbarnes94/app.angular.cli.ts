@import '../../../assets/styles/var'

:host
  margin-bottom 30px

:host /deep/

  /* block */

  .mat-checkbox
  .mat-select-container
  .mat-input-container
    margin-bottom 10px
    display block

  .mat-radio-group
    display block

  .mat-radio-button
    margin-bottom 10px
    margin-right 10px

  /* label */

  label
  .mat-radio-label
  .mat-checkbox-label
    white-space normal

  /* field */

  .mat-form-field
    width 100%

  .mat-form-field-wrapper
    width calc( 100% - 20px )

  .mat-form-field-flex
    align-items center

  .mat-form-field-infix
    padding 0
    border 0

  /* input */

  .mat-input-wrapper
    padding-bottom 0

  .mat-input-element
  .mat-input-placeholder
    padding-top 10px
    padding-bottom 10px
    box-sizing border-box
    margin 0

  .mat-input-placeholder
    position relative
    left auto
    top auto

  .mat-input-underline
    bottom auto

  /* select */

  .mat-select-trigger
    padding-top 10px
    padding-bottom 10px
    box-sizing border-box
    height auto

  .mat-select-arrow-wrapper
    &
      padding-bottom 6px
      padding-top 6px
    .mat-select-arrow
      margin-right 5px
      margin-left 5px

  /* icons */

  .mat-icon-button
    height 20px
    width 20px

  .mat-input-prefix
  .mat-input-suffix
    text-align center
    position absolute
    padding-bottom 10px
    padding-top 10px
    width 20px
    top 0

  .mat-datepicker-field
    .mat-input-suffix
      padding-bottom 7px
      padding-top 7px

  .mat-has-prefix
    .mat-input-element
    .mat-input-placeholder
      padding-left 20px

  .mat-input-prefix
    left 0

  .mat-has-suffix
    .mat-input-element
    .mat-input-placeholder
      padding-right 20px

  .mat-input-suffix
    right 0

  /* error */

  .mat-input-invalid

    .mat-form-field-infix
      border-color kuwas-red

    .mat-icon svg
    i
      color kuwas-red
      fill kuwas-red

/* label */

label
  &
    margin-bottom 10px
    display inline-block
    cursor pointer
  i
    margin-left 5px

/* error */

.mat-error
  div
    margin-bottom 5px
  div:last-child
  &.small
    margin 0
