:host
  margin-bottom 30px

:host /deep/

  /* field */

  .mat-aria-label
    font-size 0

  .mat-form-field
  .mat-radio-group
  .mat-checkbox
    margin-bottom 10px
    display block
    width 100%

  .mat-form-field-wrapper
    padding-bottom 0
    width calc( 100% - 20px )

  .mat-form-field-flex
    align-items center

  .mat-form-field-infix
    padding 0
    border 0

  .mat-radio-button
    margin-bottom 10px
    margin-right 10px

  /* label */

  .mat-form-label
  .mat-radio-label
  .mat-checkbox-label
    white-space normal

  /* input */

  .mat-input-element
  .mat-input-placeholder
    padding-top 10px
    padding-bottom 10px
    box-sizing border-box
    margin 0

  .mat-input-placeholder
    position relative
    left auto
    top auto

  .mat-input-underline
    bottom auto

  /* select */

  select
    font-size inherit
    background transparent
    border-bottom rgba( 0,0,0,0.42 ) 1px solid
    appearance none
    -webkit-appearance none
    -moz-appearance none
    border-radius 0
    padding-bottom 10px
    padding-top 10px
    width 100%

  /* icons */

  .mat-icon-button
    height 20px
    width 20px

  .mat-input-prefix
  .mat-input-suffix
    text-align center
    position absolute
    padding-bottom 10px
    padding-top 10px
    width 20px
    top 0

  .mat-datepicker-field
    .mat-input-suffix
      padding-bottom 7px
      padding-top 7px

  .mat-has-prefix
    .mat-input-element
    .mat-input-placeholder
      padding-left 20px

  .mat-input-prefix
    left 0

  .mat-has-suffix
    .mat-input-element
    .mat-input-placeholder
      padding-right 20px

  .mat-input-suffix
    right 0

  /* error */

  .mat-input-invalid

    .mat-form-field-infix
      border-color #a00

    .mat-icon svg
    i
      color #a00
      fill #a00

/* label */

.mat-form-label
  &
    margin-bottom 10px
    display inline-block
  i
    margin-left 5px

/* error */

.mat-error
  div
    margin-bottom 5px
  div:last-child
  &.small
    margin 0
