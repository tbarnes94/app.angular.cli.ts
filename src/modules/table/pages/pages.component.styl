:host
  margin-top 10px

a
  &
    color #000
    text-align center
    text-decoration none
    box-sizing border-box
    border-radius 2px
    margin-right 10px
    padding 5px 7px
    display inline-block
    min-width 30px
  &:hover
    background #eee
  &.table-pages-current
    &
    &:hover
      background #000
      color #fff
  &.table-pages-disable
    &
    &:hover
      color #ccc
      background transparent
      cursor not-allowed
  &.table-pages-prev
  &.table-pages-next
    padding 5px 10px
