:host
  &
    font-weight 400
    white-space nowrap
  &.table-cell-head
    cursor pointer
  &.table-cell-click i
    position absolute
    padding-right 10px
    padding-top 4px
    right 0
  &.table-cell-right
    text-align right
  &.table-cell-left
    text-align left

div
  padding 10px 15px
  text-overflow ellipsis
  position relative
  overflow hidden

i
  font-size 1.2rem
  margin-left 3px
